<BorderPane fx:id="bordermainlayout_exc" blendMode="EXCLUSION" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="800.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.exc_controller">

    <center>
      <GridPane fx:id="gridlayout_exclayout" hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>

             <VBox fx:id="Vbox_regarea" alignment="CENTER" prefHeight="363.0" prefWidth="715.0" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="15.0" right="15.0" />
               </GridPane.margin>
               <children>
                  <HBox alignment="CENTER" maxHeight="10.0" prefHeight="0.0" prefWidth="715.0" spacing="5.0">
                     <children>
                        <Slider fx:id="slider_speed" max="30.0" prefHeight="14.0" prefWidth="315.0" />
                        <TextField fx:id="sliderValue" maxWidth="40.0" minHeight="25.0" minWidth="32.0" prefHeight="15.0" prefWidth="30.0" style="-fx-background-radius: 0; -fx-border-width: 2; -fx-border-color: #000000;">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="pauseXresumeBtn" mnemonicParsing="false" onAction="#pauseXresumeAction" text="Pause">
                           <font>
                              <Font name="Consolas Bold" size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <TableView fx:id="table_registers" prefHeight="319.0" prefWidth="715.0">
                    <columns>
                      <TableColumn fx:id="col_reg" prefWidth="245.99998474121094" text="Registers">
                          <cellValueFactory>
                              <PropertyValueFactory property="name" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="col_data" prefWidth="257.00001525878906" text="Binary">
                          <cellValueFactory>
                              <PropertyValueFactory property="currentValue" />
                          </cellValueFactory>
                      </TableColumn>
                        <TableColumn fx:id="col_reg1" prefWidth="245.99998474121094" text="Hexadecimal">
                           <cellValueFactory>
                              <PropertyValueFactory property="hexaDecimal" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="col_reg11" prefWidth="245.99998474121094" text="Decimal">
                           <cellValueFactory>
                              <PropertyValueFactory property="decimal" />
                           </cellValueFactory>
                        </TableColumn>
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <VBox.margin>
                        <Insets top="6.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
            <VBox fx:id="VBox_consolearea" alignment="CENTER" spacing="5.0" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <children>
                  <ConsoleView fx:id="consoleView" prefHeight="352.0" prefWidth="715.0" />
               </children>
            </VBox>
            <TableView fx:id="table_inst" prefHeight="200.0" prefWidth="200.0" GridPane.hgrow="NEVER">
              <columns>
                <TableColumn fx:id="col_inst" prefWidth="287.0" text="Instructions">
                    <cellValueFactory>
                        <PropertyValueFactory property="instructionAssembly" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="col_binrep" prefWidth="264.0" text="Binary representaion">
                    <cellValueFactory>
                        <PropertyValueFactory property="instructionBinary" />
                    </cellValueFactory>
                </TableColumn>

              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <GridPane.margin>
                  <Insets bottom="-40.0" left="15.0" right="15.0" top="15.0" />
               </GridPane.margin>
            </TableView>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
              </content>
               <GridPane.margin>
                  <Insets bottom="-40.0" left="15.0" right="15.0" top="15.0" />
               </GridPane.margin>
            </ScrollPane>
         </children>
      </GridPane>
   </center>
   <top>
      <MenuBar fx:id="mnubar_menu" BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="mnu_file" mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="mnuitm_save" mnemonicParsing="false" text="save" />
              <MenuItem fx:id="mnuitm_close" mnemonicParsing="false" onAction="#close" text="Close" />
            </items>
          </Menu>
          <Menu fx:id="mnu_view" mnemonicParsing="false" text="View">
            <items>
              <MenuItem fx:id="mnuitm_instview" mnemonicParsing="false" onAction="#switchinstscene" text="Instruction view" />
              <MenuItem fx:id="mnuitm_excview" mnemonicParsing="false" text="Execution view" />
            </items>
          </Menu>
          <Menu fx:id="mnuitm_help" mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="mnuitm_instmanual" mnemonicParsing="false" text="instruction manual" />
            </items>
          </Menu>
          <Menu fx:id="mnui_about" mnemonicParsing="false" text="About...">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showalertbox1" text="Developers" />
                  <MenuItem mnemonicParsing="false" onAction="#showalertbox2" text="Program" />
               </items></Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
